<div class="clear-top col-sm-10 offset-sm-1 col-md-4 offset-md-4 nf-form">
  <h2>Submit a new research topic</h2>

  <%= form_for @research do |f| %>
    <p class="field">
      <%= f.label "Enter your topic:" %><br>
      <%= f.text_field :topic, placeholder: "Enter topic", value: params[:topic], required: true %>
    </p>
    <p class="field">
      <%= f.label "Enter description:" %><br>
      <%= f.text_area :description, placeholder: "Enter description", value: params[:description], required: false %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
</div>
