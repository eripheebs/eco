Update Research Details
<%= form_for(@investment, :url => {:action => 'update'}) do |t| %>
  <div class="form-group">
    <%= t.label 'Topic' %>
    <%= t.text_field "topic", readonly: true %>
  </div>
  <div class="form-group">
    <%= t.label 'Description' %>
    <%= t.text_field "description" %>
  </div>
  <%= t.submit "Submit" %>
<% end %>
