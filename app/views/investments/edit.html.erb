<%= form_for(@investment, :url => {:action => 'update'}) do |t| %>
  <div class="form-group">
    <%= t.label 'Title' %>
    <%= t.text_field "title", readonly: true %>
  </div>
  <div class="form-group">
    <%= t.label 'Industry' %>
    <%= t.text_field "industry" %>
  </div>
  <div class="form-group">
    <%= t.label 'Ngo' %><br>
    <%= t.text_area "ngo" %>
  </div>
  <div class="form-group">
    <%= t.label 'Description' %>
    <%= t.text_field "description" %>
  </div>
  <div class="form-group">
    <%= t.label 'Contact Email' %>
    <%= t.text_field "contact_email" %>
  </div>
  <%= t.submit "Submit" %>
<% end %>
